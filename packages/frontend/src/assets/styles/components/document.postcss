.about-document {
  max-width: 768px;
  @apply px-12 mx-auto my-32;

  h1 .text-lg {
    @apply text-3xl;
  }

  h2 {
    @apply text-2xl mt-24 mb-4 text-yellow-400;
  }

  h3 {
    @apply text-xl mt-12 mb-4 text-yellow-500;
  }

  p {
    @apply mt-4 mb-6;
  }

  @media (max-width: 640px) {
    @apply px-4 my-12;

    h2 {
      @apply mt-12;
    }
  }
}
